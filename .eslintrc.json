{
    "env": {
        "es6": true,
        "node": true,
        "mocha": true
    },
    "extends": "airbnb",
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "semi": [
            "error",
            "always"
        ],
        "jsx-a11y/href-no-hash": 0,
        "import/no-extraneous-dependencies": 0,
        "key-spacing": ["error", { "beforeColon": false }],
        "template-curly-spacing": ["error", "always"]
    }
}
